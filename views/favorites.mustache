<!DOCTYPE html>
<html lang="en">
<head>
  <title>SoundCloud Music Favorites</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="The Iron Yard Project: Week 4 - Weekly Assignment">
  <meta name="keywords" content="HTML,CSS,JAVASCRIPT">
  <meta name="author" content="Rick Murdock">
  <link href="https://fonts.googleapis.com/css?family=Spicy+Rice" rel="stylesheet">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <div id="background"></div>
  <div class="container">
    <header>
      <h1>FAVORITES</h1>
    </header>
    <section class="player">
      <audio class="music-player" controls="controls" autoplay src=""></audio>
      <br>
      <div id="marquee">
        Now Playing:&nbsp;&nbsp;<marquee>&nbsp;</marquee>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a href="/" class="nav">Return to Search</a>
      </div>
      <br>
    </section>
    <section class="search">
      <!--<form class="search-form">-->
      <!--<form action="" method="get">-->
        <!--<input type="text" id="artistSearch" placeholder="Search for Artist" name="artistSearch" value="">-->
        <!--<input type="button" class="submitBtn" value="Search">-->
        <input type="hidden" id="artistSearch" name="artistSearch" value="">
        <input type="hidden" class="submitBtn" value="Search">
        <a href="/">Return to Search</a>
      <!--</form>-->
    </section>
    <section class="results">
        {{#tracks}}
          <div class="track" id="track-{{id}}" title="{{audio}}">
            {{#artwork}}
              <img src={{artwork}} alt="" id="artwork-{{id}}" class="artwork">
            {{/artwork}}
            {{^artwork}}
              <img src="noImage.png" alt="" id="artwork-{{id}}" class="artwork">
            {{/artwork}}
            <p id="title-{{id}}">{{title}}</p>
            <p class="band">{{band}}</p>
          </div>
        {{/tracks}}
    </section>
  </div>
  <script src="main.js"></script>
</body>
</html>